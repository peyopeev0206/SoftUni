<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="author" content="Kodinger">
    <meta name="keyword" content="Kodinger, template, html5, css3, bootstrap4">
    <meta name="description" content="HTML5 and CSS3 Template Based on Bootstrap 4">
    <title>{% block title %}Peyo's Blog{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/ionicons.css') }}">
        <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}">
        <link rel="stylesheet" href="{{ asset('css/stisla.css') }}">
        <link rel="stylesheet" href="{{ asset('css/bootstrap-datetimepicker.min.css') }}">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>

<body id="{% block body_id %}{% endblock %}">

{% block header %}
    <header>
        <nav class="navbar navbar-expand-lg main-navbar">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">
                    <img src="/img/logo.png"/>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
			    <span class="navbar-toggler-icon">
			    	<i class="ion-navicon"></i>
			    </span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <div class="mr-auto"></div>
                    {% if app.user %}
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <p class="nav-link smooth-link">Welcome {{ app.user.fullName }}</p>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link smooth-link" href="{{ path('user_profile', {'username': app.user.fullName}) }}">My Article</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link smooth-link" href="{{ path('article_create') }}">New Article</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link smooth-link" href="{{ path('security_logout') }}">LogOut</a>
                            </li>
                        </ul>
                    {% else %}
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link smooth-link" href="{{ path('security_login') }}">Log In</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link smooth-link" href="{{ path('user_register') }}">Register</a>
                            </li>
                        </ul>
                    {% endif %}
                </div>
            </div>
        </nav>
    </header>
{% endblock %}


{% block body %}
    {% block main %}{% endblock %}
{% endblock %}


{% block footer %}
    <footer>
        <div class="container">
            <p>
                Made with &hearts; By Peyo Peev
            </p>
        </div>
    </footer>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/jquery.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('js/stisla.js') }}"></script>
    <script src="{{ asset('js/moment.js') }}"></script>
    <script src="{{ asset('js/bootstrap-datetimepicker.min.js') }}"></script>
{% endblock %}

</body>
</html>
