{% extends 'base.html.twig' %}

{% block body_id 'profile' %}

{% block main %}
    <section class="padding bg-grey" id="blog">
        <div class="container mt-3">
            <h2 class="section-title">Welcome</h2>
            <p class="section-lead">to your articles viewer</p>
            <hr>
            <div class="section-body">
                <div class="row col-spacing">
                    {% for article in articles %}
                    <div class="col-12 col-md-6 col-lg-4">
                        <article class="card">
                            <img class="card-img-top" id="pic" src="{{article.picture}}" style="width:337px ;height:224px " alt="Article Image">
                            <div class="card-body">
                                <div class="card-subtitle mb-2 text-muted">by {{article.author.fullName}}</div>
                                <h4 class="card-title">{{article.title}}</h4>
                                <p class="card-text" style="white-space: nowrap;overflow: hidden;text-overflow: ellipsis;">{{article.summary}}</p>
                                <div class="text-right">
                                    <a href="{{ path('article_view',{'id':article.id}) }}" class="card-more">Read More &#187;</a>
                                </div>
                            </div>
                        </article>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}

