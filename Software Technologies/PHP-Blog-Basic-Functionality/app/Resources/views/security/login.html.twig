{% extends 'base.html.twig' %}

{% block body_id 'login' %}

{% block main %}


    <section class="padding" id="blog">
        <div class="container mt-4">
            <form class="form-horizontal" role="form" method="POST" action="{{ path('security_login') }}">
                <div class="row">
                    <div class="col-md-3"></div>
                    <div class="col-md-6">
                        <h2>LogIn</h2>
                        <hr>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3"></div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                                <div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-at"></i></div>
                                <input type="text" name="_username" class="form-control" id="inputEmail"
                                       placeholder="you@example.com" required autofocus>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3"></div>
                    <div class="col-md-6">
                        <div class="form-group has-danger">
                            <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                                <div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-key"></i></div>
                                <input type="password" name="_password" class="form-control" id="inputPassword"
                                       placeholder="Password" required>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3"></div>
                    <div class="col-md-6">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <button type="submit" class="btn btn-success"><i class="fa fa-user"></i> LogIn</button>
                    </div>
                </div>
            </form>
        </div>
    </section>
    <style>
        footer{
            position: absolute;
            width: 100%;
            bottom: 0;
        }
    </style>
{% endblock %}

