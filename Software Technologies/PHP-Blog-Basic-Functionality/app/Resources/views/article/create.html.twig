{% extends 'base.html.twig' %}

{% block main %}
    <section class="padding bg-grey" id="newPost">
        <div class="container mt-5">
            <h2>New Post</h2>
            <form class="form-horizontal" role="form" method="POST" action="{{ path('article_create') }}">
                <div class="form-group">
                    <label for="postTtitle">Post Title:</label>
                    <input type="text" class="form-control" id="articleTitle" name="article[title]">
                </div>
                <div class="form-group">
                    <label for="postAuthor">Photo:</label>
                    <input type="text" class="form-control" id="articleImg" name="article[picture]">
                </div>
                <div class="form-group">
                    <label for="postContent">Content:</label>
                    <textarea class="form-control" rows="5" id="articleContent" name="article[content]"></textarea>
                </div>
                {{ form_row(form._token) }}
                <button type="reset" class="btn">Cancel</button>
                <button type="submit" class="btn">Submit</button>
            </form>
        </div>
    </section>

{% endblock %}
