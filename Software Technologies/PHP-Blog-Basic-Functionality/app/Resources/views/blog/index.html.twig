{% extends 'base.html.twig' %}

{% block main %}
    <!-- <section class="hero bg-overlay" id="hero"> -->
    <section class="hero bg-overlay" id="hero"  style="background-image: url(img/frontPagePic.png); background-attachment: fixed; background-position: center center;"><div class="overlay"></div>
        <div class="text">
            <p class="lead">Welcome!</p>
            <h1>To my blog design based on <span class="bold">Bootstrap 4</span>.</h1>
            <p>Made by Peyo Peev</p>
        </div>
    </section>
    <section class="padding bg-grey" id="blog">
        <div class="container">
            <h2 class="section-title">We Blog Sometimes</h2>
            <p class="section-lead text-muted">We wrote some articles about whatever was on our heads and most people liked it.</p>
            <hr>
            <div class="section-body">
                <div class="row col-spacing">
                    {% for article in articles %}
                    <div class="col-12 col-md-6 col-lg-4">
                        <article class="card">
                            <img class="card-img-top" id="pic" src="{{ article.picture }}" style="width:337px ;height:224px " alt="Article Image">
                            <div class="card-body">
                                <div class="card-subtitle mb-2 text-muted">by <strong> {{ article.author.fullName }}</strong> {{ article.dateAdded }}</div>
                                <h4 class="card-title">{{article.title}}</h4>
                                <p class="card-text" style="white-space: nowrap;overflow: hidden;text-overflow: ellipsis;">{{article.summary}}</p>
                                <div class="text-right">
                                    <a href="{{ path('article_view',{'id':article.id}) }}" class="card-more">Read More &#187;</a>
                                </div>
                            </div>
                        </article>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>

{% endblock %}